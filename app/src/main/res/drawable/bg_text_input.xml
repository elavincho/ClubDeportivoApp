<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa 1: Sombra inferior -->
    <item
        android:top="4dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="#40000000" /> <!-- Color de sombra (negro semi-transparente) -->
        </shape>
    </item>

    <!-- Capa 2: Contenido principal (tu shape original) -->
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="5dp"> <!-- Ajuste para que la sombra se vea -->
        <shape android:shape="rectangle">
            <!-- Borde transparente de 2dp -->
            <stroke
                android:width="2dp"
                android:color="#00FFFFFF" />

            <!-- Esquinas ligeramente redondeadas -->
            <corners
                android:radius="25dp" />

            <!-- Fondo gris -->
            <solid
                android:color="#FFFFFFFF" />

            <!-- Espacio interno (opcional)
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
                 -->
        </shape>
    </item>

</layer-list>