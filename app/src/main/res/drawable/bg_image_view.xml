<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Capa 1: Contenido principal (tu shape original) -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"> <!-- Ajuste para que la sombra se vea -->

        <shape android:shape="rectangle">
            <!-- Borde transparente de 2dp -->
            <stroke
                android:width="1dp"
                android:color="#051E64" />

            <!-- Esquinas ligeramente redondeadas -->
            <corners android:radius="10dp" />

            <!-- Fondo azul cielo -->
<!--            <solid android:color="#92C5FC"-->
            <solid android:color="#FFFFFF"/>


        </shape>
    </item>

</layer-list>